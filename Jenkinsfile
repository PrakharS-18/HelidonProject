pipeline {
    agent any
    stages {
        stage("build") {
            steps {
               echo 'building the application'
            }
        }

        stage("test") {
            steps {
                echo 'Running the tests for the application'
            }
        }

        stage("deploy") {
            steps {
                 echo 'Deploying the application'
            }
        }
    }
}